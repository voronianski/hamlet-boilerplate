reset()

textColor = #333

body
	color textColor
	font-family 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
	font-size 14px
	padding 50px

#hello h1
	font-size 30px

h2
	font-size 16px
	font-weight bold
	margin-bottom 10px

hr
	display block
	height 1px
	border 0
	border-top 1px solid #ccc
	width 100%
	margin 20px auto

input
	border 1px solid #ddd
	background-color #fcfcfc
	box-shadow 0 1px 0 #fff
	position relative
	min-height 30px
	padding 2px 10px
	margin 0 15px 5px 0
	border-radius 3px

@import './module/todos'
