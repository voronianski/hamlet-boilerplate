body
	color #333
	font-family 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
	font-size 14px

.container
	min-width 300px
	max-width 600px
	width 60%
	margin 50px auto

h1
	font-size 30px
	font-weight bold

h2
	font-size 16px
	font-weight bold
	margin-bottom 25px

hr
	display block
	height 1px
	border 0
	border-top 1px solid #ccc
	width 100%
	margin 20px auto

input[type=text]
	inline-block()
	border 1px solid #ddd
	background-color #fcfcfc
	box-shadow 0 1px 0 #fff
	position relative
	min-height 36px
	padding 5px 10px
	margin 0 0 10px
	width 100%
	border-radius 3px
	box-sizing border-box
